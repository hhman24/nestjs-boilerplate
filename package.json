{
    "name": "nestjs-boilerplate",
    "version": "10.0.0",
    "description": "Nestjs boilerplate",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "prepare": "husky",
        "lint-staged": "lint-staged",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug 0.0.0.0:9233 --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "docker:dev": "docker compose -f docker-compose.yml up --build -V -d",
        "typeorm": "ts-node -r tsconfig-paths/register -r dotenv/config node_modules/typeorm/cli.js -d src/databases/datasource.ts",
        "migration:up": "npm run typeorm migration:run",
        "migration:down": "npm run typeorm migration:revert",
        "migration:show": "npm run typeorm migration:show",
        "migration:create": "npm run typeorm migration:create",
        "schema:generate": "npm run typeorm migration:generate --pretty",
        "seed:create": "ts-node -r tsconfig-paths/register -r dotenv/config ./node_modules/typeorm-extension/bin/cli.cjs seed:create",
        "seed:run": "ts-node -r tsconfig-paths/register -r dotenv/config ./node_modules/typeorm-extension/bin/cli.cjs seed:run"
    },
    "dependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^10.0.0",
        "@nestjs/mongoose": "^11.0.3",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/swagger": "^8.1.1",
        "@nestjs/terminus": "^11.0.0",
        "@nestjs/throttler": "^6.4.0",
        "@nestjs/typeorm": "^11.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "joi": "^17.13.3",
        "lodash": "^4.17.21",
        "mongoose": "^8.16.4",
        "mysql2": "^3.14.2",
        "nest-winston": "^1.10.2",
        "nestjs-cls": "^6.0.1",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.25",
        "typeorm-extension": "^3.7.1",
        "uuid": "^11.1.0",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@commitlint/types": "^19.8.1",
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.2",
        "@types/lodash": "^4.17.20",
        "@types/multer": "^2.0.0",
        "@types/node": "^20.3.1",
        "@types/supertest": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "conventional-changelog-atom": "^5.0.0",
        "eslint": "^8.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-unused-imports": "^4.1.4",
        "husky": "^9.1.7",
        "jest": "^29.5.0",
        "lint-staged": "^16.1.2",
        "prettier": "^3.0.0",
        "prettier-plugin-organize-imports": "^4.1.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    }
}
